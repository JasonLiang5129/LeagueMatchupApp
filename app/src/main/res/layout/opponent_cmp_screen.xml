<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/select_opponent_champion_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Select Your Opponent's Champion"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/current_champ_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player's Current Champion:"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/select_opponent_champion_text"/>

    <TextView
        android:id="@+id/player_current_champ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Champ"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/current_champ_text"
        app:layout_constraintTop_toBottomOf="@id/select_opponent_champion_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/opponent_champion_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/select_opponent_champion_text"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</androidx.constraintlayout.widget.ConstraintLayout>